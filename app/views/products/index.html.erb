<div align="center" >
<p style="margin:50px auto"><font size="5" color="green"><em>Your List</em></font></p>
</div>
<body>
<table style="width:70%; margin: 115px auto;" cellspacing="30px" style="height:136px;">
  <tr>
    <th>Beginner</th>
    <th>Intermediate</th>
    <th>Advanced</th>
    <th>Language Used</th>
  </tr>
  <% @products.each do |product|%>
  <tr>
    <td><%= product.beginner%></td>
    <td><%= product.intermediate%></td>
    <td><%= product.advanced%></td>
    <td><%= product.language%></td>
    <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-xs btn-primary"%></td>
    <td><%= link_to 'Show', product_path(product), class: "btn btn-xs btn-primary"%></td>
    <td><%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: "Are you sure you want to delete the information?"}, class: "btn btn-xs btn-danger" %></td>
  </tr>
  <%end%>
</table>
<style>
  table, th, td{
  border: 2px solid blue;
  text-align: center;
}
</style>

</body>
